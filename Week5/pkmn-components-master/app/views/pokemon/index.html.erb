<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class = "js-poke-name"></span>
          <small class = "js-poke-num">#</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd class = "js-poke-height"></dd>

          <dt>Weight</dt>
          <dd class = "js-poke-weight"></dd>

          <dt>HP</dt>
          <dd class = "js-poke-hp"></dd>

          <dt> Type(s) </dt>
          <dd class = "js-poke-types"> </dd>

          <dt> Attack </dt>
          <dd class = "js-poke-attack"> </dd>

          <dt> Special Attack </dt>
          <dd class = "js-poke-spAttack"> </dd>
          
          <dt> Defense </dt>
          <dd class = "js-poke-defense"> </dd>

          <dt> Special Defense </dt>
          <dd class = "js-poke-spDefense"> </dd>

          <dt> Speed </dt>
          <dd class = "js-poke-speed"> </dd>
<!-- 
          <dt> Image </dt>
          <dd class = "js-poke-image"> </dd> -->


        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->

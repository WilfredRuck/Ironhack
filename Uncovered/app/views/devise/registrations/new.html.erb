<body class="registerBackground">
  
  <center>
    <h2 class="signUp">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field">
        <%= f.label :name, :class => "white" %> <br>
        <%= f.text_field :name, autofocus: true %><br>
      </div>

      <div class="field">
        <%= f.label :email, :class => "white" %> <br>
        <%= f.email_field :email %><br>
      </div>

      <div class="field">
        <%= f.label :username, :class => "white" %> <br>
        <%= f.text_field :username %> <br>
      </div>
      

      <div class="field">
        <%= f.label :password, :class => "white" %> <br>
        <% if @minimum_password_length %>
        <em class="white">(<%= @minimum_password_length %> characters minimum)</em>  <br>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %><br>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :class => "white" %> <br>
        <%= f.password_field :password_confirmation, autocomplete: "off" %> <br>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>

    <br>

    <%= button_to "Back", root_path, :class => "btn btn-primary", :method => :get %>

    <br>
  </center>
</body>
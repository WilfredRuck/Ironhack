<h1> Welcome to TimeTracking Tool 2</h1>
<p> Powered by Verizon, of course...</p>

<p> ADD A NEW CONTACT? </p>
<form action = "/contacts" method ="POST">
	<div>
    <label for="contact_name">Name</label>
    <input type="text" name="contact[name]" id="contact_name">
  </div>

  <div>
    <label for="contact_address">Address</label>
    <textarea name="contact[address]" id="contact_address"></textarea>
  </div>

  <div>
    <label for="contact_phone">Phone number</label>
    <input type="tel" name="contact[phone]" id="contact_phone">
  </div>

  <div>
    <label for="contact_email">Email</label>
    <input type="email" name="contact[email]" id="contact_email">
  </div>
  <button type="submit">Add this contact</button>

  <input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>">
</form>


<ul>
	<%@contacts.each do |contact| %>
		<li> <%= link_to contact.name, '/contacts/id'%>
		</li> 
	<%end%>

</ul>



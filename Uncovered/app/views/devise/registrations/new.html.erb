<h2 class="white">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h4 class="white">You just had to do something illegal and cause this page to come up...sigh</h4>
  <h4 class="white">Try again young jedi.</h4>
  <div class="field">
    <%= f.label :name, :class => "white" %>
    <%= f.text_field :name, autofocus: true %><br>
  </div>

  <div class="field">
    <%= f.label :email, :class => "white" %>
    <%= f.email_field :email %><br>
  </div>

  <div class="field">
    <%= f.label :password, :class => "white" %>
    <% if @minimum_password_length %>
    <em class="white">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %><br>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "white" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<br>

<button> <%= link_to "Back Home", root_path%> </button>

<br>

<body class="createPostBackground">
	<% if @picture_entry.errors.any? %>
				<% @picture_entry.errors.full_messages.each do |msg| %>
			    	<p style="color:red" class="errorMessage"><%= msg %></p>
 			  	<% end %>
	<% end %>
	
	<h2 class="refont shadowing">Input the required fields to post a new picture! </h2>
	<br>
	<br>
	
	<%= form_for @picture_entry, text_field: { multipart: true } do |f| %>
	
		<%= f.label :image, :class => "white" %> <i class="white">(Image must be JPEG)</i>

			<%= f.file_field :image, :class => "fileInput white" %>
		
		<br>
		<br>

		<%= f.label :caption, :class => "white" %> <i class="white"> (max:140)</i> <br>
		<%= f.text_area :caption, placeholder: "Create a caption..." %>

		<br>
		<br>

		<%= f.label :location, :class => "white" %> <i class="white"> (max:50)</i> <br>
		<%= f.text_field :location, placeholder: " As specific as possible" %>

		<br>
		<br>
		
		 <%= f.submit "Post Picture", class: "btn btn-success" %>
	<%end%>

	
</body>